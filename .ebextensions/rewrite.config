files:
    "/etc/httpd/conf.d/ssl_canonical_rewrite.conf":
        mode: "000644"
        owner: root
        group: root
        content: |
            RewriteEngine On
            <If "%{HTTP:X-Forwarded-Proto} != 'https' || %{HTTP_HOST} =~ /^www\./">
            RewriteRule (.*) https://anthonyschwartzman.net%{REQUEST_URI} [R=301,L]
            </If>
